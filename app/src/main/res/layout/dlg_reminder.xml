<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dateImv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/app_name"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/dateForegroundView"
        app:layout_constraintStart_toStartOf="@id/dateForegroundView"
        app:layout_constraintTop_toTopOf="@id/dateForegroundView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateLabelTxv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:text="@string/reminder_date"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintBottom_toBottomOf="@id/dateForegroundView"
        app:layout_constraintEnd_toStartOf="@id/dateInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dateForegroundView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateInputLayout"
        style="@style/BoxInputLayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="@id/dateForegroundView"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateInput"
            style="@style/BoxInputStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            tools:text="29 Dec. 2020" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/dateForegroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/dateInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dateInputLayout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/timeImv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/app_name"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_clock_outline"
        app:layout_constraintBottom_toBottomOf="@id/timeForegroundView"
        app:layout_constraintStart_toStartOf="@id/timeForegroundView"
        app:layout_constraintTop_toTopOf="@id/timeForegroundView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeLabelTxv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:text="@string/reminder_time"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintBottom_toTopOf="@id/invalidTimeTxv"
        app:layout_constraintEnd_toStartOf="@id/timeInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/timeForegroundView"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/invalidTimeTxv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:text="@string/reminder_invalid_time"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceCaption"
        android:textColor="?colorError"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/timeForegroundView"
        app:layout_constraintEnd_toStartOf="@id/timeInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeLabelTxv"
        tools:visibility="visible" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/timeInputLayout"
        style="@style/BoxInputLayoutStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="@id/timeForegroundView"
        app:layout_constraintTop_toBottomOf="@id/dateForegroundView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/timeInput"
            style="@style/BoxInputStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            tools:text="19:11" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/timeForegroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/timeInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/timeInputLayout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recurrenceImv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/app_name"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_repeat"
        app:layout_constraintBottom_toBottomOf="@id/recurrenceForegroundView"
        app:layout_constraintStart_toStartOf="@id/recurrenceForegroundView"
        app:layout_constraintTop_toTopOf="@id/recurrenceForegroundView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recurrenceTxv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/app_name"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="@id/recurrenceForegroundView"
        app:layout_constraintStart_toStartOf="@id/recurrenceForegroundView"
        app:layout_constraintTop_toBottomOf="@id/timeInputLayout"
        tools:text="Does not repeat" />

    <View
        android:id="@+id/recurrenceForegroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/recurrenceTxv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recurrenceTxv" />

</androidx.constraintlayout.widget.ConstraintLayout>
